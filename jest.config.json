{
	"collectCoverage": true,
	"collectCoverageFrom" : [
		"<rootDir>/src/**",
		"<rootDir>/index.ts"
	],
	"coverageDirectory": "<rootDir>/coverage",
	"moduleFileExtensions": [
		"js",
		"ts",
		"json"
	],
	"modulePathIgnorePatterns": [
		"/dist/"
	],
	"setupTestFrameworkScriptFile": "<rootDir>/jest.setup.js",
	"testRegex": "^.+\\.spec.ts$",
	"transform": {
		"^.+\\.ts$": "ts-jest"
	},
	"verbose": true
}
