{
	"collectCoverage": true,
	"collectCoverageFrom" : [
		"<rootDir>/index.ts",
		"<rootDir>/src/**",
		"!<rootDir>/src/logger/**"
	],
	"coverageDirectory": "<rootDir>/coverage",
	"globals": {
      "ts-jest": {
        "tsConfigFile": "test/tsconfig.json"
      }
    },
	"moduleFileExtensions": [
		"js",
		"ts",
		"json"
	],
	"modulePathIgnorePatterns": [
		"/dist/"
	],
	"setupTestFrameworkScriptFile": "<rootDir>/jest.setup.js",
	"testRegex": "^.+\\.spec.ts$",
	"transform": {
		"^.+\\.ts$": "ts-jest"
	},
	"verbose": true
}
